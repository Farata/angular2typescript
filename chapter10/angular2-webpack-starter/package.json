{
  "name": "angular2-webpack-starter",
  "version": "1.0.0",
  "description": "Angular 2 Webpack starter project for dev/prod environments",
  "homepage": "https://www.manning.com/books/angular-2-development-with-typescript",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean && npm run test",
    "build": "webpack --config webpack.prod.config.js --progress --profile --colors",
    "start": "webpack-dev-server --inline --progress --port 8080",
    "preserve:dist": "npm run build",
    "serve:dist": "static dist -H '{\"Cache-Control\": \"no-cache, must-revalidate\"}' -z",
    "test": "karma start karma.conf.js"
  },
  "dependencies": {
    "@angular/common": "2.0.0-rc.5",
    "@angular/compiler": "2.0.0-rc.5",
    "@angular/core": "2.0.0-rc.5",
    "@angular/http": "2.0.0-rc.5",
    "@angular/platform-browser": "2.0.0-rc.5",
    "@angular/platform-browser-dynamic": "2.0.0-rc.5",
    "@angular/router": "3.0.0-rc.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.0-beta.6",
    "systemjs": "^0.19.37",
    "zone.js": "0.6.12"
  },
  "devDependencies": {
    "@types/es6-shim": "0.0.31",
    "@types/jasmine": "^2.2.29",
    "angular2-template-loader": "^0.5.0",
    "compression-webpack-plugin": "^0.3.1",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.24.0",
    "dedupe-plugin": "^1.0.0",
    "html-loader": "^0.4.3",
    "jasmine-core": "^2.4.1",
    "karma": "^1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.0.0",
    "karma-webpack": "^1.7.0",
    "node-static": "^0.7.7",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.0",
    "to-string-loader": "^1.1.3",
    "ts-loader": "^0.8.2",
    "typescript": "^2.0.0",
    "webpack": "^2.1.0-beta.21",
    "webpack-dev-server": "^2.1.0-beta.0"
  }
}
